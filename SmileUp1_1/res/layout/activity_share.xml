<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/stroke_background_itemgridview"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/divider_titilebar_smileup" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp " >

        <LinearLayout
            android:id="@+id/facebook_share_popupwindow"
            android:layout_width="fill_parent"
            android:layout_height="70.0dip"
            android:layout_marginTop="10.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip" >

            <ToggleButton
                android:id="@+id/fbtogglebutton_share_activity"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:background="@drawable/selector_fbtogglebutton"
                android:textOff=""
                android:textOn="" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Facebook"
                android:textSize="25.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/twitter_share_popupwindow"
            android:layout_width="fill_parent"
            android:layout_height="70.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip" >

            <ToggleButton
                android:id="@+id/twittertogglebutton_share_activity"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:background="@drawable/selector_twittertogglebutton"
                android:textOff=""
                android:textOn="" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Twitter"
                android:textSize="25.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tumblr_share_popupwindow"
            android:layout_width="fill_parent"
            android:layout_height="70.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip" >

            <ToggleButton
                android:id="@+id/tumblrtogglebutton_share_activity"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:background="@drawable/selector_tumblrtogglebutton"
                android:textOff=""
                android:textOn="" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tumblr"
                android:textSize="25.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linkedin_share_popupwindow"
            android:layout_width="fill_parent"
            android:layout_height="70.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip" >

            <ToggleButton
                android:id="@+id/linkedintogglebutton_share_activity"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:background="@drawable/selector_linkedintogglebutton"
                android:textOff=""
                android:textOn="" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Linkedin"
                android:textSize="25.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gmail_share_popupwindow"
            android:layout_width="fill_parent"
            android:layout_height="70.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip" >

            <ImageView
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:scaleType="fitCenter"
                android:src="@drawable/gmail" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Gmail"
                android:textSize="25.0sp" />
        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="30.0dip"
            android:background="@drawable/selector_main_button"
            android:gravity="center"
            android:text="Share this campaign"
            android:textColor="@android:color/white"
            android:textSize="25.0sp" />
    </LinearLayout>

</LinearLayout>