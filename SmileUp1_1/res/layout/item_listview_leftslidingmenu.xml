        <TextView
            android:id="@+id/subtitle_itemlistview_leftslidingmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="subtitle"
            android:textColor="@android:color/white"
            android:textSize="13.0sp" />
    </LinearLayout>

</LinearLayout>