<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="90.0dip"
    android:paddingBottom="10.0dip"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    android:paddingTop="10.0dip" >

    <com.smileup.app1_1.customviews.RoundedImageView
        android:id="@+id/photo_item_listview_commentsactivity"
        android:layout_width="70.0dip"
        android:layout_height="70.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/name_item_listview_commentsactivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/photo_item_listview_commentsactivity"
        android:layout_toLeftOf="@+id/layout_item_listview_commentsactivity"
        android:layout_toRightOf="@+id/photo_item_listview_commentsactivity"
        android:ellipsize="end"
        android:gravity="left"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="name"
        android:textSize="18.0sp" />

    <TextView
        android:id="@+id/comments_item_listview_commentsactivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_item_listview_commentsactivity"
        android:layout_toLeftOf="@+id/layout_item_listview_commentsactivity"
        android:layout_toRightOf="@+id/photo_item_listview_commentsactivity"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip"
        android:text="comments"
        android:textColor="@android:color/darker_gray"
        android:textSize="13.0sp" />

    <LinearLayout
        android:id="@+id/layout_item_listview_commentsactivity"
        android:layout_width="70.0dip"
        android:layout_height="70.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/time_item_listview_commentsactivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:scrollHorizontally="true"
            android:text="time"
            android:textSize="12.0sp" />

        <Button
            android:id="@+id/backbutton_item_listview_commentsactivity"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/selector_replaybutton"
            android:scaleType="fitCenter" />
    </LinearLayout>

</RelativeLayout>