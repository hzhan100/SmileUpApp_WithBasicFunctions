<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.smileup.app1_1.customviews.SquareLayout
        android:id="@+id/relativelayout_item_gridview_details"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/selector_griditem_detailsactivity"
        android:padding="0.0dip" >

        <ImageView
            android:id="@+id/image_item_gridview_details2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />
    </com.smileup.app1_1.customviews.SquareLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30.0dip"
        android:layout_marginTop="5.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip" >

        <ImageView
            android:id="@+id/comment_item_gridview_details"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0dip"
            android:src="@drawable/comment_icon_grey" />

        <TextView
            android:id="@+id/commenttext_item_gridview_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_toRightOf="@+id/comment_item_gridview_details"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="10" />

        <ImageView
            android:id="@+id/share_item_gridview_details"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_toRightOf="@+id/commenttext_item_gridview_details"
            android:src="@drawable/as_share_grey" />

        <TextView
            android:id="@+id/sharetext_item_gridview_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_toRightOf="@+id/share_item_gridview_details"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="10" />
    </RelativeLayout>

</LinearLayout>