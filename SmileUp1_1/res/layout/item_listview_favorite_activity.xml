<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip" >

    <com.smileup.app1_1.customviews.RoundedImageView
        android:id="@+id/photo_item_listview_favoriteactivity"
        android:layout_width="70.0dip"
        android:layout_height="70.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/name_item_lisview_favoriteactivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_toLeftOf="@+id/favoritebutton_item_listview_favoriteactivity"
        android:layout_toRightOf="@+id/photo_item_listview_favoriteactivity"
        android:gravity="center"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="name"
        android:textSize="15.0sp" />

    <ToggleButton
        android:id="@+id/favoritebutton_item_listview_favoriteactivity"
        android:layout_width="80.0dip"
        android:layout_height="30.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_green_togglebutton"
        android:checked="false"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textOff="Canceled"
        android:textOn="Favorite"
        android:textSize="12.0sp" />

</RelativeLayout>